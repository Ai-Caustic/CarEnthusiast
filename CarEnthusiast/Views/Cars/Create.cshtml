@model CarEnthusiast.Models.CarViewModel

@{
    ViewData["Title"] = "Create";
    Layout = null;
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css">
<link rel="stylesheet" href="~/css/addCar.css" />
<div class="card">
    <div class="card-header">
        <h3 class="card-title text-center">Add a car</h3>
    </div>
    @using (Html.BeginForm("Create", "Cars", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="form-group">
            @Html.LabelFor(m => m.Make)
            @Html.TextBoxFor(m => m.Make, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Make, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Model)
            @Html.TextBoxFor(m => m.Model, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Model, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Year)
            @Html.TextBoxFor(m => m.Year, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Year, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Showroom)
            @Html.TextBoxFor(m => m.Showroom, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Showroom, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.Label("Uploaded Images")
            <input type="file" name="UploadedImages" accept="image/*" multiple />
        </div>

        <button type="submit" class="btn btn-primary">Create</button>
    }
